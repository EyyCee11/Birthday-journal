        <button class="btn prev" onclick="prevPage()">Previous</button>
        <button class="btn next" onclick="nextPage()">Next</button>
    </div>

    <script>
        const pages = document.querySelector('.pages');
        let currentPage = 0;

        function nextPage() {
            if (currentPage < 4) {
                currentPage++;
                updateView();
            }
        }

        function prevPage() {
            if (currentPage > 0) {
                currentPage--;
                updateView();
            }
        }

        function updateView() {
            const angle = -180 * currentPage;
            pages.style.transform = `rotateY(${angle}deg)`;
        }
    </script>
